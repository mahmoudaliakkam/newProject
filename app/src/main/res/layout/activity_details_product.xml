<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.Activites.DetailsProductActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/a" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6D000000">

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/WidthAndHeightImageProfile"
        android:layout_marginLeft="@dimen/MarginBottom"
        android:layout_marginTop="@dimen/PaddingForSearch"
        android:layout_marginEnd="@dimen/WidthAndHeightImageProfile"
        android:layout_marginRight="@dimen/WidthAndHeightImageProfile"
        android:layout_marginBottom="@dimen/PaddingForSearch">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:background="@color/colorAccent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ww"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/BetweenDontAndSign"
                android:layout_marginEnd="@dimen/BetweenDontAndSign"
                android:layout_marginRight="@dimen/BetweenDontAndSign">

                <TextView
                    android:id="@+id/txtActDetProdExpProd"
                    style="@style/AppTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/BetweenDontAndSign"
                    android:text="26/06/2020"
                    android:textColor="@color/colorAccent" />

                <ImageView
                    android:id="@+id/imgActDetProdFavorite"
                    android:layout_width="@dimen/DrawableSearchPadding"
                    android:layout_height="@dimen/DrawableSearchPadding"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_favorite_border" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imgActDetProdImageProduct"
                android:layout_width="match_parent"
                android:layout_height="@dimen/WidthForTabWelcome"
                android:layout_below="@+id/ww"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/BetweenBtnAndDont"
                android:scaleType="fitCenter"
                android:src="@drawable/a" />


            <TextView
                android:id="@+id/txtActDetProdNameDepartment"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgActDetProdImageProduct"
                android:layout_margin="@dimen/BetweenDontAndSign"
                android:text="Milks"

                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txtActDetProdNameProduct"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtActDetProdNameDepartment"
                android:layout_margin="@dimen/BetweenDontAndSign"

                android:text="Lavackery 80g" />


            <LinearLayout
                android:id="@+id/cc"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txtActDetProdNameProduct"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal" />


            <RelativeLayout
                android:id="@+id/ff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cc"
                android:layout_margin="@dimen/BetweenDontAndSign">

                <TextView
                    android:id="@+id/txtActDetProdIDProduct"
                    style="@style/AppTheme"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="12354897" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txtActDetProdOldPrice"
                        style="@style/AppTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/MargintTopForSignintocontinue"
                        android:layout_marginRight="@dimen/MargintTopForSignintocontinue"
                        android:layout_toStartOf="@+id/txtActDetProdAddToCart"
                        android:layout_toLeftOf="@+id/txtActDetProdAddToCart"
                        android:text="100$"
                        android:textColor="@android:color/darker_gray" />


                    <TextView
                        android:id="@+id/txtActDetProdNewPrice"
                        style="@style/AppTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtActDetProdOldPrice"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="@dimen/MargintTopForSignintocontinue"
                        android:layout_marginRight="@dimen/MargintTopForSignintocontinue"
                        android:layout_toStartOf="@+id/txtActDetProdAddToCart"
                        android:layout_toLeftOf="@+id/txtActDetProdAddToCart"
                        android:text="78.5$"
                        android:textColor="@color/colorPrimary" />


                    <ImageView
                        android:id="@+id/txtActDetProdAddToCart"
                        android:layout_width="@dimen/DrawableSearchPadding"
                        android:layout_height="@dimen/DrawableSearchPadding"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@color/colorPrimary"
                        android:padding="5dp"

                        android:src="@drawable/ic_local_grocery_store" />


                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/uu"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ff"
                android:background="@android:color/darker_gray"
                android:orientation="vertical" />



















            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/uu"
                android:background="#FFF0F0F0"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/colorAccent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Descraption Product"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/newsMoreTextSize" />

                        <ImageView
                            android:id="@+id/imgActDetProdArrowDescraptionProduct"
                            android:layout_width="@dimen/WidtehToTime"
                            android:layout_height="@dimen/WidtehToTime"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_keyboard_arrow" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/txtActDetProdDescraptionProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/colorAccent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Ingredients"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/newsMoreTextSize" />

                        <ImageView
                            android:id="@+id/imgActDetProdArrowIngredients"
                            android:layout_width="@dimen/WidtehToTime"
                            android:layout_height="@dimen/WidtehToTime"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_keyboard_arrow" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/txtActDetProdIngredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/colorAccent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Nutritional Values"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/newsMoreTextSize" />

                        <ImageView
                            android:id="@+id/imgActDetProdArrowNutritionalValues"
                            android:layout_width="@dimen/WidtehToTime"
                            android:layout_height="@dimen/WidtehToTime"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_keyboard_arrow" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtActDetProdNutritionalValues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/colorAccent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Details Product"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/newsMoreTextSize" />

                        <ImageView
                            android:id="@+id/imgActDetProdArrowDetailsProduct"
                            android:layout_width="@dimen/WidtehToTime"
                            android:layout_height="@dimen/WidtehToTime"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_keyboard_arrow" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtActDetProdDetailsProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/colorAccent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Connact"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/newsMoreTextSize" />

                        <ImageView
                            android:id="@+id/imgActDetProdArrowConnact"
                            android:layout_width="@dimen/WidtehToTime"
                            android:layout_height="@dimen/WidtehToTime"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_keyboard_arrow" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtActDetProdDetailsConnact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:visibility="gone" />
                </LinearLayout>


            </LinearLayout>
































        </RelativeLayout>

    </ScrollView>


</RelativeLayout>